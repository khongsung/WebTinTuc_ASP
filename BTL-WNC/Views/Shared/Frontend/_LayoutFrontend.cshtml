<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Frontend/trang_chu.css" rel="stylesheet" />
    <link href="~/Content/Frontend/global.css" rel="stylesheet" />
    <link href="~/Content/Frontend/reset.css" rel="stylesheet" />
    <link href="~/Content/Frontend/sukien.css" rel="stylesheet" />
    <link href="~/Content/Frontend/create_news.css" rel="stylesheet" />
    <link href="~/Content/Frontend/chi_tiet_bai_dang.css" rel="stylesheet" type="text/css" />
